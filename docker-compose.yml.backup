version: '3.8'

services:
  # Banco de dados PostgreSQL
  postgres:
    image: postgres:15-alpine
    container_name: taskdodb-postgres
    environment:
      POSTGRES_DB: TASKDODB
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./init.sql:/docker-entrypoint-initdb.d/init.sql
    networks:
      - task-network
    restart: unless-stopped

  # PgAdmin4 para gerenciamento do banco
  pgadmin:
    image: dpage/pgadmin4:latest
    container_name: taskdodb-pgadmin
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@taskdodb.com
      PGADMIN_DEFAULT_PASSWORD: admin123
      PGADMIN_CONFIG_SERVER_MODE: 'False'
    ports:
      - "8081:80"
    volumes:
      - pgadmin_data:/var/lib/pgadmin
    networks:
      - task-network
    depends_on:
      - postgres
    restart: unless-stopped

volumes:
  postgres_data:
    driver: local
  pgadmin_data:
    driver: local

networks:
  task-network:
    driver: bridge

